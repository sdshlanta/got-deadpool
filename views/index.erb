		<title>Game of Thrones Deadpool</title>
		<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="css/bootstrap-grid.min.css">
		<link rel="stylesheet" type="text/css" href="css/bootstrap-reboot.min.css">
		<link rel="stylesheet" type="text/css" href="css/style.css">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Averia+Serif+Libre:300,400,700">
    <!-- Include ButtonJS -->
    <script>
      window.ButtonWebConfig = {
        applicationId: 'app-6d23818bee6b8ba1',
        enhanceLinks: true,
        defaults: {
          'btn-1e716e657cf55302': {
            context: {
              item: {
                identifiers: {
                  jet: '092abb50fbc54571a0c36085ba6bb767'
                }
              }
            }
          }
        }
      };
      (function(u,s,e,b,t,n){
        u['__bttnio']=b;u[b]=u[b]||function(){(u[b].q=u[b].q||[]).push(arguments)};t=s.createElement(e);n=s.getElementsByTagName(e)[0];t.async=1;t.src='https://web.btncdn.com/v1/button.js';n.parentNode.insertBefore(t,n)
      })(window, document, 'script', 'bttnio');
    </script>
    <script>
      window.onload = function() {
        window.setTimeout(function() {
          var cells = document.getElementsByClassName('bttnio-cell bttnio-ellipsis');
          cells[0].children[1].innerHTML = "Buy the books on Jet.com!";
        }, 500);
      }
    </script>
	</head>

	<body>
		<div class="container">
			<div class="col-lg-6 offset-lg-3 header">
				<img class="object-center" alt="Game of Thrones logo" src="img/img_got-logo@2x.png" style="max-height: 100px;" />
				<p class="lead">Follow along as <%= @num_players %> friends bet all the gold in Braavos on the seventh season of HBO's hit show, Game of Thrones. Each player drafted 5 characters they believe will meet their end in the next 8 weeks. Whoever has the least characters standing by the end, wins. When you play the game of thrones, you win or you die.</p>
        <p class="lead"><a href="/create">Create your own Game of Thrones Deadpool!</a></p>
        <div data-bttnio-id="btn-1e716e657cf55302"></div>
        <a href="https://itunes.apple.com/gb/tv-season/game-of-thrones-seasons-1-6/id1104330858">
          <p class="lead">Watch seasons 1-6 show on iTunes!</p>
          <img class="object-center" alt='Season 1-6' src='img/got-seasons-1-6.png' style="max-height: 180px;border-radius: 8px;" />
        </a>
			</div>
      <% @deadpool.players.each do |player| %>

      <!-- New Player -->
      <div class="row player">
        <div class="col-lg-2">
          <h3>House</h3>
          <h2><%= player.name %></h2>
          <!-- Figure out remaining characters -->
          <% characters_alive = 0 %>
          <% player.slots.each do |slot| %>
            <% characters_alive += 1 if Character.find_by(id: slot.character_id).is_alive %>
          <% end %>
          <!-- Display remaining characters -->
          <p><%= characters_alive %> characters left</p>
        </div>

        <!-- Display player's characters -->
        <% player.slots.each do |slot| %>
        <div class='col-lg-2 <%= "dead" if !slot.character.is_alive %>'>
          <img class="object-center" alt='<%= slot.character.name %>' src='img/characters/<%= slot.character.name %>@.png' style="max-height: 180px;border-radius: 8px;" />
          <p><%= slot.character.name %></p>
        </div>
        <% end %>
      </div>

      <% end %>

			<!-- Social for GoT -->
			<div class="row">
				<ul class="social object-center">
					<li><a href="http://www.facebook.com/GameOfThrones/">Facebook</a></li>
					<li><a href="http://twitter.com/GameOfThrones">Twitter</a></li>
					<li><a href="http://www.instagram.com/gameofthrones/">Instagram</a></li>
				</ul>
			</div>
      <!-- Social -->
      <div class="row">
        <ul class="social object-center">
          <li>Created by <a href="https://twitter.com/tylernappy">@tylernappy</a></li>
          <li>Design by <a href="https://twitter.com/patricknlewis">@patricknlewis</a></li>
        </ul>
      </div>
		</div>

		<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
	</body>
</html>
